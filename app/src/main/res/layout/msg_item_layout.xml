<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Left Text-->
    <LinearLayout
        android:id="@+id/item_layout_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateText_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DateLeft"
            android:textSize="15dp"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/item_msg_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_message_another_user"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timeLabel_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time is 10"
            android:textColor="#757575"
            android:textSize="12sp"
            android:visibility="gone"/>


    </LinearLayout>




    <!--Right Text-->
    <LinearLayout
        android:id="@+id/item_layout_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateText_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DateRight"
            android:textSize="15dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/item_msg_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/background_message_current_user"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timeLabel_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Time is 10"
            android:textColor="#757575"
            android:textSize="12sp" />



    </LinearLayout>




    <TextView
    android:id="@+id/item_name_l"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/shape_circle_red"
    android:ellipsize="end"
    android:gravity="center"
    android:lines="1"
    android:textColor="@color/white"
    android:textSize="10dp"
    android:visibility="gone"/>
    <ImageView
        android:id="@+id/item_img_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_name_l"
        android:background="@drawable/icon_msg_l"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/item_name_r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_circle_green"
        android:ellipsize="marquee"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="gone"
        android:singleLine="true" />
    <ImageView
        android:id="@+id/item_img_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_name_r"
        android:background="@drawable/icon_msg_r"
        android:gravity="center"
        android:padding="5dp"
        android:visibility="gone" />

</RelativeLayout>